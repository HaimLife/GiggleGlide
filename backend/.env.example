# GiggleGlide Backend Environment Variables

# Application Settings
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost/giggleglide

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.8

# AI Generation Settings
AI_JOKE_BATCH_SIZE=10
AI_JOKE_CACHE_SIZE=100
AI_GENERATION_COOLDOWN_MINUTES=5

# Cost Control Settings
AI_MONTHLY_BUDGET_USD=100.0
AI_MAX_COST_PER_REQUEST=0.10
AI_COST_TRACKING_ENABLED=True

# Moderation Settings
MODERATION_ENABLED=True
MODERATION_THRESHOLD_VIOLENCE=0.7
MODERATION_THRESHOLD_HATE=0.5
MODERATION_THRESHOLD_SELF_HARM=0.7
MODERATION_THRESHOLD_SEXUAL=0.7